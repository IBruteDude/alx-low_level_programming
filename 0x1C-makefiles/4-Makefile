CC=gcc
SRC=main.c school.c
OBJ=$(SRC:.c=.o)
NAME=school
RM=rm
CFLAGS=-Wall -Werror -Wextra -pedantic

.PHONY: all
all: $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

.PHONY: clean
clean: fclean oclean

.PHONY: oclean
oclean:
	$(RM) -f $(OBJ)

.PHONY: fclean
fclean: oclean
	$(RM) -f *.swp *~ $(NAME)

.PHONY: re
re: oclean $(OBJ) all

$(OBJ): $(SRC)
	$(CC) $(CFLAGS) $(SRC) -c
